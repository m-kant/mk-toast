{
  "name": "mk-toast",
  "version": "2.0.1",
  "description": "Flash messages (notifications/toast). Library agnostic with VUE.js connector. Smooth CSS animation with no twitching.",
  "main": "dist/mk-toast.js",
  "types": "dist/mk-toast.d.ts",
  "scripts": {
    "build": "gulp clean && gulp build -m prod && npm run dts",
    "serve": "gulp serve -m dev",
    "dev": "npm run serve",
    "dts": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist",
    "tsc": "tsc",
    "roll": "rollup -c",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecosystem:Vue.js",
    "flash message",
    "notify",
    "alert",
    "message",
    "toast",
    "toastr",
    "floating message",
    "message balloon",
    "alarm",
    "notification",
    "notifier",
    "informer",
    "UI"
  ],
  "author": "m.kantemirov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m-kant/mk-toast.git"
  },
  "bugs": {
    "url": "https://github.com/m-kant/mk-toast/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/node": "^14.14.7",
    "browser-sync": "^2.26.13",
    "chalk": "^4.1.0",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-noop": "^1.0.1",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "node-sass": "^7.0.0",
    "rollup": "^2.33.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {}
}
